{
    "name": "@convo-ai/server",
    "version": "0.0.0",
    "type": "module",
    "exports": {
        ".": {
            "default": "./dist/index.mjs"
        }
    },
    "scripts": {
        "dev": "cross-env ENV=development tsx watch src/dev.ts",
        "clean": "rimraf ./dist",
        "build": "pnpm run clean && node build.mjs",
        "start": "cross-env ENV=production node ./dist/index.mjs",
        "prettier:write": "prettier --write --ignore-path ../../.prettierignore --ignore-unknown .",
        "prettier:check": "prettier --check --ignore-path ../../.prettierignore --ignore-unknown .",
        "type-check": "tsc --noEmit",
        "check": "pnpm run prettier:check && pnpm run type-check"
    },
    "dependencies": {
        "@convo-ai/shared": "workspace:*",
        "@epic-web/invariant": "^1.0.0",
        "@t3-oss/env-core": "^0.12.0",
        "cors": "^2.8.5",
        "dotenv": "^16.4.7",
        "express": "^5.0.1",
        "handlebars": "^4.7.8",
        "lodash-es": "^4.17.21",
        "neverthrow": "^8.2.0",
        "openai": "^4.86.2",
        "zod": "^3.24.1"
    },
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^5.2.2",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/lodash-es": "^4.17.12",
        "@types/node": "~22.13.0",
        "cross-env": "^7.0.3",
        "esbuild": "^0.25.0",
        "prettier": "^3.4.2",
        "rimraf": "^6.0.1",
        "tsx": "^4.19.3",
        "typescript": "^5.8.2"
    }
}
